{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug executable 'carcinisation'",
      "cargo": {
        "args": ["build", "--bin=carcinisation", "--package=carcinisation"],
        "filter": {
          "name": "carcinisation",
          "kind": "bin"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}",
      "env": {
        "CARGO_MANIFEST_DIR": "${workspaceFolder}",
        "DYLD_LIBRARY_PATH": "${workspaceFolder}/target/debug/deps:${env:HOME}/.rustup/toolchains/nightly-aarch64-apple-darwin/lib"
      }
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug unit tests in executable 'carcinisation'",
      "cargo": {
        "args": [
          "test",
          "--no-run",
          "--bin=carcinisation",
          "--package=carcinisation"
        ],
        "filter": {
          "name": "carcinisation",
          "kind": "bin"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}",
      "env": {
        "CARGO_MANIFEST_DIR": "${workspaceFolder}"
      }
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Run editor",
      "cargo": {
        "args": ["build", "--bin=editor", "--package=editor"],
        "filter": {
          "name": "editor",
          "kind": "bin"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}/tools/editor",
      "env": {
        "CARGO_MANIFEST_DIR": "${workspaceFolder}/tools/editor",
        "DYLD_LIBRARY_PATH": "${workspaceFolder}/target/debug/deps:${env:HOME}/.rustup/toolchains/nightly-aarch64-apple-darwin/lib"
      },
      "sourceLanguages": ["rust"]
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Generate Palettes",
      "cargo": {
        "args": [
          "build",
          "--bin=generate-palettes",
          "--package=generate-palettes"
        ],
        "filter": {
          "name": "generate-palettes",
          "kind": "bin"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}/scripts/generate-palettes",
      "env": {
        "CARGO_MANIFEST_DIR": "${workspaceFolder}"
      }
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Generate Typeface",
      "cargo": {
        "args": [
          "build",
          "--bin=generate-typeface",
          "--package=generate-typeface"
        ],
        "filter": {
          "name": "generate-typeface",
          "kind": "bin"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}/scripts/generate-typeface",
      "env": {
        "CARGO_MANIFEST_DIR": "${workspaceFolder}"
      }
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Process Graphics",
      "cargo": {
        "args": ["build", "--bin=process-gfx", "--package=process-gfx"],
        "filter": {
          "name": "process-gfx",
          "kind": "bin"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}/scripts/process-gfx",
      "env": {
        "CARGO_MANIFEST_DIR": "${workspaceFolder}"
      }
    }
  ]
}
